<div id="news-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-9">
        <p>新規投稿を追加</p>
        <%= form_with model: @news do |form| %>
          <div class="form-group">
            <%= form.label :タイトル %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :投稿 %>
            <%= form.rich_text_area :content %><br>
          </div>
          <div class="form-group">
            <%= form.submit "投稿", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
      <div class="col-2"></div>
    </div>
  </div>
</div>