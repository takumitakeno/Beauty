<div id="news-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-9">
        <p>新規投稿を追加</p>
        <%= form_with model: @news do |form| %>
          <div class="form-group">
            <%= form.text_field :title, class: "form-control" %><br>
            <%= form.text_area :content, rows: '30', class: "form-control" %><br>
            <%= form.submit "投稿", class: "btn btn-info"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>