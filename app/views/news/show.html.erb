<div class="main">
  <section class="show-news">
    <div class="container">
      <div class="row">
        <div class="col-8">
          <div class="news">
            <div class="news-header">
              <h1><%= @news.title %></h1>
              <p><%= @news.created_at %></p>
            </div>
            <div class="row">
              <div class="col-12">
                <p><%= @news.content %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-3 offset-1">
          <div class="show-news-all">
            </div>
        </div>
      </div>
    </div>
  </section>
</div>